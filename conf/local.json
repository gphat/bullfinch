{
    "config_refresh_seconds": 300,
	"performance": {
		"collect": false,
	},
    "workers" : [
        {
            "name" : "Performance Emitter",
            "worker_class" : "iinteractive.bullfinch.minion.PerformanceEmitter",
            "worker_count" : 1,
            "options": {
                "kestrel_host": "127.0.0.1",
                "kestrel_port" : 22133,
                "queue": "metrics",
            }
        },
        {
            "name" : "Query Runner",
            "worker_class" : "iinteractive.bullfinch.minion.JDBCQueryRunner",
            "worker_count" : 2,
            "options"  : {
                "kestrel_host" : "127.0.0.1",
                "kestrel_port" : 22133,
                "subscribe_to" : "test-net-kestrel",
                "timeout" : 10000,
                "connection" : {
                    "driver" : "com.mysql.jdbc.Driver",
                    "dsn" : "jdbc:mysql://localhost/test",
                    "uid" : "root",
                    "validation" : "SELECT 1"
                },
                "statements" : {
                    "badTable": {
                        "sql": "SELECT current_timestamp FROM public.TESTES_TABLE",
                    },
                    "goodTable": {
                        "sql": "SELECT CURTIME()",
                    },
                    "getInt" : {
                        "sql"    : "SELECT an_int FROM PUBLIC.TEST_TABLE WHERE an_int=?",
                        "params" : [ "INTEGER" ]
                    },
                    "getFloat" : {
                        "sql"    : "SELECT a_float FROM PUBLIC.TEST_TABLE WHERE a_float=?",
                        "params" : [ "NUMBER" ]
                    },
                    "getBool" : {
                        "sql"    : "SELECT a_bool FROM PUBLIC.TEST_TABLE WHERE a_bool=?",
                        "params" : [ "BOOLEAN" ]
                    },
                    "getString" : {
                        "sql"    : "SELECT a_string FROM PUBLIC.TEST_TABLE WHERE a_string=?",
                        "params" : [ "STRING" ]
                    },
                }
            }
        },
        {
            "name" : "Query Runner",
            "worker_class" : "iinteractive.bullfinch.minion.JDBCTableEmptier",
            "worker_count" : 2,
            "options"  : {
                "kestrel_host" : "127.0.0.1",
                "kestrel_port" : 22133,
                "publish_to" : "test-net-kestrel",
                "interval": 1000,
                "select_query": "SELECT * FROM test LIMIT 10",
                "delete_query": "DELETE FROM test WHERE id=?",
                "delete_key": "id",
                "connection" : {
                    "driver" : "com.mysql.jdbc.Driver",
                    "dsn" : "jdbc:mysql://localhost/test",
                    "uid" : "root",
                    "validation" : "SELECT 1"
                }
            }
        }
    ]
}
